<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="40dp">

        <ImageButton
            android:id="@+id/backButton_main"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_button"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/back"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="269dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="프로필"
            android:textColor="#1D1617" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/user" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="반려견주"
                            android:textColor="#1D1617" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:text="user_name"
                            android:textColor="#7B6F72" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/button_more"
                        android:layout_width="110dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical|end"
                        android:background="@drawable/back_color"
                        android:text="자세히"
                        android:textColor="#FFFFFF"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/back_whitecorner"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/text_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="알림"
                        android:textColor="#1D1617"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_notification"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            app:srcCompat="@drawable/notification" />

                        <TextView
                            android:id="@+id/text_notiset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="9"
                            android:text="알림 설정"
                            android:textColor="#7B6F72" />

                        <Switch
                            android:id="@+id/switch_notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/back_whitecorner"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/text_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="계정"
                        android:textColor="#1D1617"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_profile"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            app:srcCompat="@drawable/profile" />

                        <TextView
                            android:id="@+id/text_personinfoset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="9"
                            android:text="개인정보 설정"
                            android:textColor="#7B6F72" />

                        <ImageButton
                            android:id="@+id/button_arrow1"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/back_white"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/arrow"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        <![CDATA[

                    />

                ]]>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_document"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            app:srcCompat="@drawable/document" />

                        <TextView
                            android:id="@+id/text_petinfoset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="9"
                            android:text="반려견 정보 설정"
                            android:textColor="#7B6F72" />

                        <ImageButton
                            android:id="@+id/button_arrow2"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/back_white"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/arrow"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                        <![CDATA[

                    />

                ]]>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_danger"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_graph"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            app:srcCompat="@drawable/graph" />

                        <TextView
                            android:id="@+id/text_dangeradd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="9"
                            android:text="위험 물질 추가"
                            android:textColor="#7B6F72" />

                        <ImageButton
                            android:id="@+id/button_arrow3"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/back_white"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/arrow" /><![CDATA[

                    />

                ]]>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_pastvideo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_chart"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            app:srcCompat="@drawable/chart" />

                        <TextView
                            android:id="@+id/text_pastvideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="9"
                            android:text="과거 영상 조회"
                            android:textColor="#7B6F72" />

                        <ImageButton
                            android:id="@+id/button_arrow4"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/back_white"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/arrow" /><![CDATA[

                    />

                ]]>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/back_whitecorner"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/text_screen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="화면"
                        android:textColor="#1D1617"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_interest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_dots"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/colordots" />

                        <TextView
                            android:id="@+id/text_interest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="9"
                            android:text="관심도 측정"
                            android:textColor="#7B6F72" />

                        <ImageButton
                            android:id="@+id/button_arrow5"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/back_white"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/arrow" /><![CDATA[

                    />

                ]]>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_livevideo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_shield"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/shield" />

                        <TextView
                            android:id="@+id/text_realtimevideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="9"
                            android:text="실시간 영상 확인"
                            android:textColor="#7B6F72" />

                        <ImageButton
                            android:id="@+id/button_arrow6"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/back_white"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/arrow" /><![CDATA[

                    />

                ]]>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_set"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            app:srcCompat="@drawable/setting" />

                        <TextView
                            android:id="@+id/text_highlight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="9"
                            android:text="하이라이트 요약"
                            android:textColor="#7B6F72" />

                        <ImageButton
                            android:id="@+id/button_arrow7"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/back_white"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/arrow"
                            tools:ignore="TouchTargetSizeCheck" /><![CDATA[

                    />

                ]]>
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/tab_home"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/navbar_home"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/tab_photo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="45dp"
                android:background="@drawable/back_white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/navbar_photo"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/tab_camera"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="45dp"
                android:background="@drawable/back_white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/navbar_camera"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/tab_profile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/back_white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/navbar_profile"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <ImageView
            android:id="@+id/tab_search"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/navbar_search" />

    </FrameLayout>


</LinearLayout>